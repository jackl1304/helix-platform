# Helix Platform Environment Configuration
# Kopiere diese Datei zu .env und passe die Werte an

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DATABASE_URL="postgresql://username:password@localhost:5432/helix_platform"
TEST_DATABASE_URL="postgresql://username:password@localhost:5432/helix_platform_test"

# ==============================================
# SESSION & SECURITY
# ==============================================
SESSION_SECRET="your-super-secret-session-key-change-in-production"
JWT_SECRET="your-jwt-secret-key-change-in-production"
ENCRYPTION_KEY="your-32-character-encryption-key"

# ==============================================
# API KEYS
# ==============================================
# ==============================================
# AI INTEGRATION
# ==============================================
# Perplexity: OpenAI-kompatibles Endpoint
PERPLEXITY_API_KEY="your-perplexity-api-key"
OPENAI_API_KEY="your-openai-api-key"
ANTHROPIC_API_KEY="your-anthropic-api-key"
GOOGLE_GEMINI_API_KEY="your-google-gemini-api-key"

# ==============================================
# EMAIL CONFIGURATION
# ==============================================
SENDGRID_API_KEY="your-sendgrid-api-key"
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# ==============================================
# EXTERNAL SERVICES
# ==============================================
FDA_API_KEY="your-fda-api-key"
WHO_API_KEY="your-who-api-key"
MHRA_API_KEY="your-mhra-api-key"

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD="your-redis-password"

# ==============================================
# MONITORING
# ==============================================
PROMETHEUS_ENDPOINT="http://localhost:9090"
GRAFANA_ENDPOINT="http://localhost:3001"
SENTRY_DSN="your-sentry-dsn"

# ==============================================
# FILE STORAGE
# ==============================================
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_S3_BUCKET="your-s3-bucket"
AWS_REGION="eu-central-1"

# ==============================================
# APPLICATION SETTINGS
# ==============================================
NODE_ENV="development"
PORT=3000
HOST="0.0.0.0"
LOG_LEVEL="info"
MAX_FILE_SIZE="50mb"
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# TENANT CONFIGURATION
# ==============================================
DEFAULT_TENANT_ID="demo-medical-tech"
DEFAULT_TENANT_SUBDOMAIN="demo-medical"
DEFAULT_SUBSCRIPTION_TIER="professional"

# ==============================================
# FEATURE FLAGS
# ==============================================
ENABLE_AI_ANALYSIS=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_ANALYTICS=true
ENABLE_DEBUG_MODE=false

# ==============================================
# CORS CONFIGURATION
# ==============================================
ALLOWED_ORIGINS="http://localhost:5173,http://localhost:3000,https://helix-platform.com"
CORS_CREDENTIALS=true

# ==============================================
# SSL/TLS CONFIGURATION
# ==============================================
SSL_CERT_PATH="/etc/ssl/certs/helix-platform.crt"
SSL_KEY_PATH="/etc/ssl/private/helix-platform.key"
FORCE_HTTPS=true

# ==============================================
# BACKUP CONFIGURATION
# ==============================================
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET="helix-backups"

# ==============================================
# PERFORMANCE SETTINGS
# ==============================================
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30000
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=5000

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_LOGS=true
ENABLE_SQL_LOGGING=false
ENABLE_PERFORMANCE_MONITORING=true

# ==============================================
# PRODUCTION SETTINGS
# ==============================================
# Setze diese Werte in der Produktion:
# NODE_ENV="production"
# LOG_LEVEL="warn"
# ENABLE_DEBUG_MODE=false
# ENABLE_HOT_RELOAD=false
# ENABLE_DEBUG_LOGS=false
